<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="修改密码"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#666666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dip"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="当前密码"
                android:textColor="@color/darkgrey"
                android:textSize="18sp"
                android:gravity="center|left"/>
            <EditText
                android:id="@+id/old_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_frame_darkgrey"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center|left"
                android:hint="请输入当前密码"
                android:inputType="textPassword"
                android:textColorHint="@color/darkgrey2"
                android:textSize="18sp"
                android:textColor="@color/darkgrey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="新密码"
                android:textColor="@color/darkgrey"
                android:textSize="18sp"
                android:gravity="center|left"
                android:id="@+id/textView2" />

            <EditText
                android:id="@+id/new_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_frame_darkgrey"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center|left"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textColorHint="@color/darkgrey2"
                android:textSize="18sp"
                android:textColor="@color/darkgrey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="再次输入新密码"
                android:textColor="@color/darkgrey"
                android:textSize="18sp"
                android:gravity="center|left"/>
            <EditText
                android:id="@+id/comfirm_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_frame_darkgrey"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center|left"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:textColorHint="@color/darkgrey2"
                android:textSize="18sp"
                android:textColor="@color/darkgrey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                ></LinearLayout>
            <Button
                android:id="@+id/submit_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round25dp_blue"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>